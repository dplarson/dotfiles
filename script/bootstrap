#!/bin/bash
#
# bootstrap
#
# Install dependencies.

# Inspired heavily by davidxia's bootstrap_dotfiles
#   URL: https://github.com/davidxia/bootstrap_dotfiles/


function die {
    echo -e "Error: $1"
    exit 1
}


function echo_with_color {
    echo -e "\033[0;34m$1\033[0m"
}


function install_homebrew {
    echo_with_color "\nChecking if homebrew is already installed..."
    if [ -x /usr/local/bin/brew ] ; then
        echo -e "Homebrew is already installed."
    else
        die "Homebrew not installed."
    fi
}


function install_homebrew_pkgs {
    echo_with_color "\nInstalling homebrew packages..."
    brew install ack
    brew install coreutils
    brew install git git-extras
    brew install macvim --override-system-vim
    brew install --disable-etcdir zsh
    brew install z
}


function configure_path {
    echo_with_color "\nSetting system path..."

    export PATH="/usr/local/bin:$PATH"
    export PATH="$PATH:/usr/local/sbin"
    export PATH="$PATH:$ZSH/bin:"
    export PATH="$PATH:/usr/local/share/python"
    export PATH="$PATH:/usr/texbin"
    export PATH="$PATH:/usr/local/Cellar/gems/1.8/bin"
    export PATH="$PATH:/usr/sbin"

    export MANPATH="/usr/local/man:/usr/local/git/man:$MANPATH"

    # Remove duplicates from $PATH
    PATH=`awk -F: '{for(i=1;i<=NF;i++){if(!($i in a)){a[$i];printf s$i;s=":"}}}'<<<$PATH`
}


function install_vundle {
    echo_with_color "\nChecking if vundle is already installed..."

    # create vundle directory
    if [ ! -d ~/.vim/bundle/vundle/ ] ; then
        mkdir -p ~/.vim/bundle/vundle
    fi
    
    # install vundle
    if [ ! -d ~/.vim/bundle/vundle/.git/ ] ; then
        echo -e "Vundle not installed. Installing now..."
        git clone http://github.com/gmarik/vundle.git ~/.vim/bundle/vundle
    else
        echo -e "Vundle is already installed."
    fi
}


function install_vundle_pkgs {
    echo_with_color "\nInstalling vundle packages..."

    # check that vim is installed
    if test ! $(which vim) ; then
        die "Vim not installed."
    fi

    # install packages
    vim -c "execute \"BundleInstall\" | q | q"
}


# OS-specific settings
if [ $(uname -s) = "Darwin" ] ; then
    install_homebrew
    install_homebrew_pkgs 
    configure_path
    export EDITOR='mvim'
else
    export EDITOR='vim'
fi


# install all other dependencies
install_vundle
install_vundle_pkgs
