#!/bin/sh

# toggle wifi power


wifi_on () {
  /usr/sbin/networksetup -setairportpower en1 on
}


wifi_off () {
  /usr/sbin/networksetup -setairportpower en1 off
}


wifi_restart () {
  /usr/sbin/networksetup -setairportpower en1 off
  /usr/sbin/networksetup -setairportpower en1 on
}



if [ -x /usr/sbin/networksetup ] ; then

  case "$1" in
    off)
      wifi_off 
      ;;
    on)
      wifi_on
      ;;
    restart)
      wifi_restart
      ;;
    esac

fi
